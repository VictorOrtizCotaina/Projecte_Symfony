{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdCategory</th>
                <th>Title</th>
                <th>Description</th>
                <th>Image</th>
                <th>DateAdd</th>
                <th>Active</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.idCategory }}</td>
                <td>{{ category.title }}</td>
                <td>{{ category.description }}</td>
                <td>{{ category.image }}</td>
                <td>{{ category.dateAdd ? category.dateAdd|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ category.active ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('category_show', {'idCategory': category.idCategory}) }}">show</a>
                    <a href="{{ path('category_edit', {'idCategory': category.idCategory}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}">Create new</a>
{% endblock %}
