{% if paginator.hasToPaginate %}
    <div class="navigation text-center">
        <ul class="pagination">
            {% if paginator.hasPreviousPage %}
                <li class="prev"><a href="{{ path(router_name, {page: paginator.previousPage} | merge(query)) }}" rel="previous"><i class="fa fw fa-arrow-left"></i> {{ 'previous'|trans }}</a></li>
            {% else %}
                <li class="prev disabled"><span><i class="fa fw fa-arrow-left"></i> {{ 'previous'|trans }}</span></li>
            {% endif %}

            {% for i in 1..paginator.lastPage %}
                {% if i == paginator.currentPage %}
                    <li class="active"><span>{{ i }}<span class="sr-only">{{ 'current'|trans }}</span></span></li>
                {% else %}
                    <li><a href="{{ path(router_name, {page: i} | merge(query)) }}">{{ i }}</a></li>
                {% endif %}
            {% endfor %}

            {% if paginator.hasNextPage %}
                <li class="next"><a href="{{ path(router_name, {page: paginator.nextPage} | merge(query)) }}" rel="next">{{ 'next'|trans }} <i class="fa fw fa-arrow-right"></i></a></li>
            {% else %}
                <li class="next disabled"><span>{{ 'next'|trans }} <i class="fa fw fa-arrow-right"></i></span></li>
            {% endif %}
        </ul>
    </div>
{% endif %}