<form method="post" action="{{ path('forum_delete', {'idForum': forum.idForum}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ forum.idForum) }}">
    <button class="btn">Delete</button>
</form>
