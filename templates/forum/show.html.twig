{% extends 'base.html.twig' %}

{% block title %}Forum{% endblock %}

{% block body %}
    <h1>Forum</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdForum</th>
                <td>{{ forum.idForum }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ forum.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ forum.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ forum.image }}</td>
            </tr>
            <tr>
                <th>DateAdd</th>
                <td>{{ forum.dateAdd ? forum.dateAdd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ forum.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('forum_index') }}">back to list</a>

    <a href="{{ path('forum_edit', {'idForum': forum.idForum}) }}">edit</a>

    {{ include('forum/_delete_form.html.twig') }}
{% endblock %}
