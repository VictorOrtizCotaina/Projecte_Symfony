{% extends 'base.html.twig' %}

{% block title %}Topic{% endblock %}

{% block body %}
    <h1>Topic</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdTopic</th>
                <td>{{ topic.idTopic }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ topic.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ topic.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ topic.image }}</td>
            </tr>
            <tr>
                <th>DateAdd</th>
                <td>{{ topic.dateAdd ? topic.dateAdd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Views</th>
                <td>{{ topic.views }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ topic.active ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('topic_index') }}">back to list</a>

    <a href="{{ path('topic_edit', {'idTopic': topic.idTopic}) }}">edit</a>

    {{ include('topic/_delete_form.html.twig') }}
{% endblock %}
